<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MindYourMood.Splash" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="colorPrimaryDark">#FF5150ED</item>
    <item name="android:windowBackground">@drawable/backgroundsplash</item>
  </style>
  <style name="fullscreendialog.style" parent="Theme.AppCompat.Light.NoActionBar" >
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowIsFloating">false</item>
  </style>

  <style name="MindYourMood.ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:textColor">@android:color/white</item>
  </style>
  
  <style name="MindYourMood.ActivityTheme.Toolbar">
    <item name="android:background">#FF3BAFDA</item>
    <item name="android:titleTextColor">@android:color/white</item>
  </style>

  <style name="MindYourMood.ActivityTheme.TitleTextAppearanceNormal">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="MindYourMood.ActivityTheme.TitleTextAppearanceLarge">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="MindYourMood.ActivityTheme.TitleTextAppearanceExtraLarge">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">22sp</item>
  </style>

  <style name="MindYourMood.ActivityTheme.HeaderFooter">
    <!-- <item name="android:background">#FF71C4E4</item> -->
    <item name="android:background">#FF134B7F</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="MindYourMood.ActivityTheme.HeaderFooterText">
    <item name="android:background">@null</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="MindYourMood.ActivityTheme.SpinnerGeneralDropdown">
    <item name="android:background">@color/spinnerDropdownBackground</item>  
    <item name="android:textColor">@android:color/white</item>
  </style>

  <!--<style name="MindYourMood.ActivityTheme.SeekBar">
    <item name="android:progressBackgroundTint">#FF71C4E4</item>
    <item name="android:progressTint">#FF3BAFDA</item>
    <item name="android:thumbTint">#FF3BAFDA</item>
  </style>-->
  <style name="MindYourMood.ActivityTheme.SeekBar">
    <item name="android:progressBackgroundTint">#F4F9AA</item>
    <item name="android:progressTint">#ECF83A</item>
    <item name="android:thumbTint">#ECF83A</item>
  </style>
  
  <!--<style name="MindYourMood.ActivityTheme.Body">
    <item name="android:background">#FF98D4EB</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textStyle">bold</item>
  </style>-->
  <style name="MindYourMood.ActivityTheme.Body">
    <item name="android:background">@drawable/bodyGradient</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="MindYourMood.ActivityTheme.BodyText">
    <item name="android:background">@null</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textStyle">bold</item>
  </style>
  
  <style name="MindYourMood.ActivityTheme.ListItemNormal">
    <item name="android:background">#FF98D4EB</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="MindYourMood.ActivityTheme.ListItemSelected">
    <item name="android:background">#FF71C4E4</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="MindYourMood.ActivityTheme.EditText">
    <item name="android:background">#FF98D4EB</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="MindYourMood.ActivityTheme.EditText.Selected">
    <item name="android:background">#FF71C4E4</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="MindYourMood.ActivityTheme.ProgressBar">
    <item name="android:indeterminateDrawable">@drawable/apptheme_progressbar_indeterminate_holo8</item>
    <item name="android:minHeight">16dp</item>
    <item name="android:maxHeight">16dp</item>
  </style>

  <style name="MindYourMood.ActivityTheme.DatePicker">
    <item name="android:editTextStyle">@style/Widget.EditText.White</item>
  </style>

  <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
    <item name="android:textColor">@android:color/white</item>
  </style>
  
  <style name="MindYourMood.ActivityTheme.AppointmentPopup">
    <item name="android:background">#FF2E2EE8</item>
    <item name="android:textColor">@android:color/white</item>
  </style>
</resources>